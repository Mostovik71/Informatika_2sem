package sample;

import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.PasswordField;
import javafx.scene.control.TextField;
import javafx.stage.Stage;
import javafx.event.ActionEvent;

import java.io.IOException;


public class Controller {

    @FXML
    private TextField lgfld;

    @FXML
    private PasswordField psswrdfld;

    @FXML
    private Button log;

    @FXML
    private Button rgstr;

    @FXML
    void initialize() {
        log.setOnAction(event -> {
            System.out.println("Вы вошли");
        });
    }

    @FXML
    void reg(ActionEvent actionEvent) {
        FXMLLoader loader = new FXMLLoader();
        loader.setLocation(getClass().getResource("/sample/RegisterSample.fxml"));
        try {
            loader.load();
        } catch (IOException e) {
            e.printStackTrace();
        }
        Parent root = loader.getRoot();
        Stage stage = new Stage();
        stage.setScene(new Scene(root));
        stage.show();
    }
    @FXML
    void auth(ActionEvent actionEvent){
        String loginText = lgfld.getText().trim();
        String passwordText = psswrdfld.getText().trim();
        if(!loginText.equals("") && !passwordText.equals("")){
            loginUser(loginText, passwordText);
        }
        else
            System.out.println("Данные не введены");

    }

    private void loginUser(String loginText, String passwordText) {

    }

}
