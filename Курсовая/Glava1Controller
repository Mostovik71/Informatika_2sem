public class Glava1Controller {
    ObservableList<XYChart.Series<Double, Double>> lineChartData=FXCollections.observableArrayList();
    @FXML
    LineChart<Double, Double> lineChart;
    @FXML
    private TextField brushSize;

    @FXML
    private ColorPicker colorPicker;

    @FXML
    private CheckBox eraser;



    @FXML
    NumberAxis xAxis;
    @FXML
    NumberAxis yAxis;

    @FXML
    AnchorPane pane;

    @FXML
    private Canvas canvas;
    LineChart.Series<Double, Double> series = new LineChart.Series<>();
    @FXML
    ComboBox<String> comboBox;
    ObservableList<String> combo1 = FXCollections.observableArrayList("Декабрь","Январь","Февраль","Март","Апрель","Май","Июнь","Июль","Август","Сентябрь","Октябрь","Ноябрь");
public void com() {
    comboBox.setItems(combo1);
    }

    public void btn(){
        if (comboBox.getValue()=="Декабрь") {
            december();
        }
        if (comboBox.getValue()=="Январь") {
            january();
        }
        if (comboBox.getValue()=="Февраль") {
            february();
        }
        if (comboBox.getValue()=="Март") {
            march();
        }
        if (comboBox.getValue()=="Апрель") {
            april();
        }
        if (comboBox.getValue()=="Май") {
            may();
        }
        if (comboBox.getValue()=="Июнь") {
            june();
        }
        if (comboBox.getValue()=="Июль") {
            july();
        }
        if (comboBox.getValue()=="Август") {
            august();
        }
        if (comboBox.getValue()=="Сентябрь") {
            september();
        }
        if (comboBox.getValue()=="Октябрь") {
            october();
        }
        if (comboBox.getValue()=="Ноябрь") {
            november();
        }

    }
    @FXML
    public void december() {
        xAxis.setAutoRanging(false);
        xAxis.setLowerBound(0);
        xAxis.setUpperBound(31);
        xAxis.setTickUnit(10);
        yAxis.setAutoRanging(false);
        yAxis.setLowerBound(0);
        yAxis.setUpperBound(100);
        yAxis.setTickUnit(10);
        try {
            File file = new File("C:\\Users\\mosto\\Desktop\\Values.csv");

            FileReader fr = new FileReader(file);

            BufferedReader reader = new BufferedReader(fr);

            String line = reader.readLine();

            series.setName("Декабрь");
            while (line != null) {
                double x = Double.parseDouble(line.substring(0, 2));
                double y = Double.parseDouble(line.substring(11));
                if (line.substring(3, 5).equals("12")) {
                    series.getData().add(new XYChart.Data<>(x, y));
                }
                line = reader.readLine();
            }


            lineChartData.add(series);
            lineChart.setData(lineChartData);
            Node line1 = series.getNode().lookup(".chart-series-line");

            Color color = Color.valueOf(String.valueOf(colorPicker.getValue()));

            String rgb = String.format("%d, %d, %d",
                    (int) (color.getRed() * 255),
                    (int) (color.getGreen() * 255),
                    (int) (color.getBlue() * 255));

            line1.setStyle("-fx-stroke: rgba(" + rgb + ", 1.0);");
            lineChart.setCreateSymbols(false);




        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
    @FXML
    public void january() {
        xAxis.setAutoRanging(false);
        xAxis.setLowerBound(0);
        xAxis.setUpperBound(31);
        xAxis.setTickUnit(1);
        yAxis.setAutoRanging(false);
        yAxis.setLowerBound(-50);
        yAxis.setUpperBound(50);
        yAxis.setTickUnit(1);
        try {
            File file = new File("C:\\Users\\mosto\\Desktop\\Values.csv");

            FileReader fr = new FileReader(file);

            BufferedReader reader = new BufferedReader(fr);

            String line = reader.readLine();
            LineChart.Series<Double, Double> series = new LineChart.Series<>();
            series.setName("Январь");
            while (line != null) {
                double x1 = Double.parseDouble(line.substring(0, 2));
                double y1 = Double.parseDouble(line.substring(11));
                if (line.substring(4, 5).equals("1")) {

                    series.getData().add(new XYChart.Data<>(x1, y1));

                }


                line = reader.readLine();
            }


            lineChartData.addAll(series);
            lineChart.setData(lineChartData);
            Node line1 = series.getNode().lookup(".chart-series-line");

            Color color = Color.valueOf(String.valueOf(colorPicker.getValue()));

            String rgb = String.format("%d, %d, %d",
                    (int) (color.getRed() * 255),
                    (int) (color.getGreen() * 255),
                    (int) (color.getBlue() * 255));

            line1.setStyle("-fx-stroke: rgba(" + rgb + ", 1.0);");
            lineChart.setCreateSymbols(false);

        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
