package sample;

import javafx.collections.FXCollections;
import javafx.collections.ObservableList;
import javafx.fxml.FXML;
import javafx.scene.chart.CategoryAxis;
import javafx.scene.chart.LineChart;
import javafx.scene.chart.NumberAxis;
import javafx.scene.chart.XYChart;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

public class Controller {

    ObservableList<XYChart.Series<Double, Double>> lineChartData=FXCollections.observableArrayList();
    @FXML
    LineChart<Double, Double> lineChart;
    @FXML
    NumberAxis X;
    @FXML
    NumberAxis Y;

    @FXML
    public void file() {
        try {
            File file = new File("C:\\Users\\mosto\\Desktop\\temp2.csv");

            FileReader fr = new FileReader(file);

            BufferedReader reader = new BufferedReader(fr);

            String line = reader.readLine();
            LineChart.Series1<Double, Double> series = new LineChart.Series<>();
            series1.setName("Апрель");
            while (line != null) {
                double x = Double.parseDouble(line.substring(0, 2));
                double y = Double.parseDouble(line.substring(11));
                if (line.substring(4, 5).equals("4")) {
                    System.out.println(x + " " + y);

                    series.getData().add(new XYChart.Data<>(x, y));
                }
                line = reader.readLine();
            }
            lineChartData.add(series1);
            lineChart.setData(lineChartData);
        } catch (IOException e) {
            e.printStackTrace();
         
        }


    }
}



